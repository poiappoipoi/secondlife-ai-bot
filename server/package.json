{
  "name": "secondlife-ai-bot",
  "version": "2.0.0",
  "description": "AI bot server for Second Life with multi-provider support",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "npm run typecheck && bun src/index.ts",
    "start": "bun src/index.ts",
    "typecheck": "npm run typecheck:src",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:src": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "check": "npm run typecheck && npm run lint && npm run format:check"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
